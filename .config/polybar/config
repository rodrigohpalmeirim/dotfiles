[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5

format-connected-foreground = ${colors.color-2}
format-disconnected-foreground = ${colors.color-2}

format-connected = %{A1:setsid "$TERMINAL" -e nmtui:}%{A2:$TERMINAL -e speedometer -r wlp2s0 -t wlp2s0:}%{A3:nm-connection-editor:}Ôá´ <label-connected>%{A}%{A}%{A}
format-connected-background = ${colors.background-1}
format-disconnected-background = ${colors.background-1}
label-connected = %signal%%

format-disconnected = %{A1:setsid "$TERMINAL" -e nmtui:}%{A2:$TERMINAL -e speedometer -r wlp2s0 -t wlp2s0:}%{A3:nm-connection-editor:}Ôá´ %{A}%{A}%{A}
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-1-alt}

