#!/bin/bash

declare -A day=([âœ¨]=î… [â˜ï¸]=îŒ½  [ğŸŒ«]=îŒ“  [ğŸŒ§]=îŒ˜  [ğŸŒ§]=îŒ—  [â„ï¸]=îŒš  [â„ï¸]=î  [ğŸŒ¦]=îŒˆ  [ğŸŒ¦]=îŒ‰  [ğŸŒ§]=îª  [ğŸŒ§]=îŒ†  [ğŸŒ¨]=îŒŠ  [ğŸŒ¨]=îŸ  [â›…ï¸]=îŒ‚  [â˜€ï¸]=îŒ  [ğŸŒ©]=îŒ  [â›ˆ]=îŒœ  [â›ˆ]=î¥  [â˜ï¸]=îŒ’)
declare -A night=([âœ¨]=î… [â˜ï¸]=îŒ½  [ğŸŒ«]=îŒ“  [ğŸŒ§]=îŒ˜  [ğŸŒ§]=îŒ—  [â„ï¸]=îŒš  [â„ï¸]=î  [ğŸŒ¦]=îŒ³  [ğŸŒ¦]=îŒ´ [ğŸŒ§]=î«  [ğŸŒ§]=î«  [ğŸŒ¨]=îŒµ  [ğŸŒ¨]=î   [â›…ï¸]=îŒ®  [â˜€ï¸]=îŒ«  [ğŸŒ©]=îŒ  [â›ˆ]=îŒœ  [â›ˆ]=î¦  [â˜ï¸]=îŒ’)

info=$(curl -s wttr.in/gloshaugen?format="%S+%s+%c+%t\n")

sunrise=$(echo $info | cut -f 1 -d " ")
sunset=$(echo $info | cut -f 2 -d " ")
emoji=$(echo $info | cut -f 3 -d " " | xargs)
temperature=$(echo $info | cut -f 4 -d " " | sed "s/+//")

sunrise=$(date --date=$sunrise +%s)
sunset=$(date --date=$sunset +%s)
now=$(date +%s)

if [ "$sunrise" -le "$now" -a "$now" -le "$sunset" ]; then
	icon=${day[$emoji]}
else
	icon=${night[$emoji]}
fi

echo "%{T6}$icon %{T-} ${temperature}"
