#!/bin/bash
# Give a battery name (e.g. BAT0) as an argument.

while true; do
	capacity=$(cat /sys/class/power_supply/"$1"/capacity) || exit
	status=$(cat /sys/class/power_supply/"$1"/status)

	if [ $(cat /home/rodrigo/.config/battery-notify-state) == "1" ]; then
		if [ $status == "Discharging" -a $capacity -le 20 ]; then
			notify-send -u critical -t 6000 "$icon Battery at $capacity%" -h string:x-canonical-private-synchronous:battery
		fi
	fi
	sleep 5
done
